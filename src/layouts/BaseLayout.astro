---
import '../styles/global.css';
const { children } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Independent HVAC sizing and consulting using real-world data." />
    <meta name="theme-color" content="#0f172a" />
    <meta property="og:title" content="Data Driven Comfort" />
    <meta property="og:description" content="Smarter HVAC decisions using data-driven insights and Manual J reports." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://datadrivencomfort.com" />
    <title>Data Driven Comfort â€” Smarter HVAC Starts with the Right Data</title>

    <!-- Font Optimization -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" as="style" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" media="all" crossorigin="anonymous" />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  </head>

  <body>
    <header style="border-bottom: 1px solid #e2e8f0; background-color: #ffffff;">
        <div class="container" style="display: flex; justify-content: space-between; align-items: center; padding: 1rem 0;">
          <a href="/" style="font-size: 1.25rem; font-weight: 600; color: var(--color-text); text-decoration: none;">
            Data Driven Comfort
          </a>
          <nav style="display: flex; gap: 1.5rem; font-size: 0.95rem;">
            <a href="/" style="color: var(--color-text); text-decoration: none;">Home</a>
            <a href="/manual-j" style="color: var(--color-text); text-decoration: none;">Manual J</a>
          </nav>
        </div>
      </header>
      

    <main>
      <slot />
    </main>

    <footer style="text-align: center; padding: 2rem 1rem; font-size: 0.875rem; color: var(--color-muted);">
      &copy; 2025 Data Driven Comfort. All rights reserved.
    </footer>
  </body>
</html>
